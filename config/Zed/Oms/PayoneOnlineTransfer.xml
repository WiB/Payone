<?xml version="1.0" encoding="utf-8"?>
<statemachine
        xmlns="https://static.spryker.com"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="https://static.spryker.com https://static.spryker.com/oms-01.xsd">

    <process name="PayoneOnlineTransfer" main="true">
        <states>
            <state name="new" reserved="true"/>
            <state name="bank system login"/>
            <state name="preauthorization pending"/>
            <state name="preauthorization appointed"/>
            <state name="invalid"/>
            <state name="cancel reservation pending"/>
            <state name="cancelled" />
            <state name="shipped" />
            <state name="clarify capture failed" />
            <state name="clarify refund failed" />
            <state name="payment pending" />
            <state name="paid" />
            <state name="captured" />
            <state name="closed" />
            <state name="returned" />
            <state name="refund pending" />
            <state name="refunded" />
        </states>

        <transitions>
            <transition happy="true" condition="Payone/PreauthorizationIsApprovedPlugin">
                <source>new</source>
                <target>preauthorization pending</target>
                <event>pre-authorize</event>
            </transition>

            <transition condition="Payone/PaymentIsAppointed" happy="true">
                <source>preauthorization pending</source>
                <target>preauthorization appointed</target>
            </transition>

            <transition condition="Payone/PreauthorizationIsErrorPlugin">
                <source>new</source>
                <target>invalid</target>
                <event>pre-authorize</event>
            </transition>

            <transition condition="Payone/PreauthorizationIsRedirectPlugin">
                <source>new</source>
                <target>bank system login</target>
                <event>pre-authorize</event>
            </transition>

            <transition>
                <source>bank system login</source>
                <target>invalid</target>
                <event>redirect timeout</event>
            </transition>

            <transition condition="Payone/PaymentIsAppointed" happy="true">
                <source>bank system login</source>
                <target>preauthorization appointed</target>
            </transition>

            <transition condition="Payone/CaptureIsApprovedPlugin">
                <source>preauthorization appointed</source>
                <target>cancel reservation pending</target>
                <event>cancel reservation</event>
            </transition>

            <transition condition="Payone/PaymentIsCapture">
                <source>cancel reservation pending</source>
                <target>cancelled</target>
            </transition>

            <transition happy="true">
                <source>preauthorization appointed</source>
                <target>shipped</target>
                <event>ship</event>
            </transition>

            <transition condition="Payone/CaptureIsApprovedPlugin" happy="true">
                <source>shipped</source>
                <target>payment pending</target>
                <event>capture</event>
            </transition>

            <transition condition="Payone/PaymentIsPaid" happy="true">
                <source>payment pending</source>
                <target>paid</target>
            </transition>

            <transition condition="Payone/PaymentIsCapture" happy="true">
                <source>paid</source>
                <target>captured</target>
            </transition>

            <transition>
                <source>shipped</source>
                <target>clarify capture failed</target>
                <event>capture</event>
            </transition>

            <transition>
                <source>clarify capture failed</source>
                <target>shipped</target>
                <event>retry capture</event>
            </transition>

            <transition>
                <source>clarify capture failed</source>
                <target>cancelled</target>
                <event>cancel</event>
            </transition>

            <transition happy="true">
                <source>captured</source>
                <target>closed</target>
                <event>item not returned</event>
            </transition>

            <transition>
                <source>captured</source>
                <target>returned</target>
                <event>return</event>
            </transition>

            <transition condition="Payone/RefundIsApprovedPlugin">
                <source>returned</source>
                <target>refund pending</target>
                <event>refund</event>
            </transition>

            <transition condition="Payone/PaymentIsRefund">
                <source>refund pending</source>
                <target>refunded</target>
            </transition>

            <transition>
                <source>returned</source>
                <target>clarify refund failed</target>
                <event>refund</event>
            </transition>

            <transition>
                <source>clarify refund failed</source>
                <target>refunded</target>
                <event>manual refund</event>
            </transition>

        </transitions>

        <events>
            <event name="pre-authorize" onEnter="true" command="Payone/PreAuthorize"/>
            <event name="redirect timeout" timeout="1hour" />
            <event name="ship" manual="true" />
            <event name="item not returned" timeout="14days" />
            <event name="cancel reservation" manual="true" command="Payone/Cancel"/>
            <event name="cancel" manual="true"/>
            <event name="capture" onEnter="true" command="Payone/Capture"/>
            <event name="return" manual="true" />
            <event name="refund" onEnter="true" command="Payone/Refund" />
            <event name="retry capture" manual="true" />
            <event name="manual refund" manual="true" />
        </events>

    </process>
</statemachine>
